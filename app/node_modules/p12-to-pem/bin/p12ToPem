#! /usr/bin/env node

var p12ToPem = require("../p12ToPem");
var fs = require("fs");

var filename = process.argv[2];
var password = process.argv[3];

fs.readFile(filename, function(error, p12Buffer) {
  if (error) {
    return console.error(error);
  }

  try {
    process.stdout.write(p12ToPem(p12Buffer, password));
  }
  catch(error) {
    console.error(error);
  }
});
